<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/parentContrainLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:background="@color/violet">

    <View
        android:id="@+id/divider"
        android:layout_width="1dp"
        android:layout_height="150dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider2"
        android:layout_width="@dimen/dimen_width_90dp"
        android:layout_height="1dp"
        android:background="@color/white"
        android:translationX="-80dp"
        android:translationY="-20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider3"
        android:layout_width="@dimen/dimen_width_90dp"
        android:layout_height="1dp"
        android:background="@color/white"
        android:translationX="-80dp"
        android:translationY="-20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <!--<com.example.quizz_game.Container_Screen.Custom_View.Hexagon_shape.HexagonView
        android:id="@+id/customView"
        android:layout_width="@dimen/dimen_width_100dp"
        android:layout_height="@dimen/dimen_height_100dp"
        android:layout_below="@+id/divider"
        android:translationY="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />-->

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="@dimen/dimen_width_150dp"
        android:layout_height="@dimen/dimen_width_150dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/bg_nothing"
        android:scaleType="center"/>

    <com.example.quizz_game.Container_Screen.Custom_View.Hexagon_shape.HexagonView
        android:id="@+id/customView1"
        android:layout_width="@dimen/dimen_width_100dp"
        android:layout_height="@dimen/dimen_height_100dp"
        android:layout_below="@+id/divider"
        android:translationY="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.example.quizz_game.Container_Screen.Custom_View.Hexagon_shape.HexagonView
        android:id="@+id/customView2"
        android:layout_width="@dimen/dimen_width_100dp"
        android:layout_height="@dimen/dimen_height_100dp"
        android:layout_below="@+id/divider"
        android:translationY="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>